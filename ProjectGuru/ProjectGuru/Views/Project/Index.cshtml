@model IEnumerable<ProjectGuru.Models.Project>

@{
    ViewBag.Title = "Project Overview";
}

<h2>Projects Overview</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Estimated Duration
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedDuration)
            </td>
            <td>
                @Html.ActionLink("View Activities", "Index", "Activity", new { projectId = item.Id }, null) |
                @Html.ActionLink("Edit", "Edit", new { projectId = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { projectId = item.Id })
            </td>
        </tr>
    }

</table>
